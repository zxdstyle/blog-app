#blog-app-loading
	.loading-icon-wrap
		.loading-icon.icon1
		.loading-icon.icon2
		.loading-icon.icon3
	.loading-progress
		span#progress-num 0
		span %

style.
	#blog-app-loading {
		position: fixed;
		z-index: 9999;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, .2);
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		transition: all 200ms ease;
		opacity: 1;
	}
	#blog-app-loading.fade {
		opacity: 0;
	}
	.loading-icon-wrap {
		position: relative;
		width: 40px;
		height: 40px;
		margin-bottom: 30px;
		transition: all 200ms ease;
		transform-origin: center 80%;
		animation: pageLoading 3s infinite;
	}
	.loading-icon {
		width: 14px;
		height: 14px;
		background: #578ae0;
		border-radius: 50%;
		position: absolute;
	}
	.loading-icon.icon1 {
		left: 50%;
		top: 6px;
		margin-left: -7px;
		transition: all 1s linear;
		animation: loading1 1s infinite;
	}
	@keyframes loading1 {
		0% {
			top: 6px;
		}
		50% {
			top: 15px;
		}
		100% {
			top: 6px;
		}
	}

	.loading-icon.icon2 {
		left: 0;
		top: 33px;
		margin-left: -3px;
		transition: all 1s linear;
		animation: loading2 1s infinite;
	}

	@keyframes loading2 {
		0% {
			top: 33px;
			margin-left: -3px;
		}
		50% {
			top: 30px;
			margin-left: 3px;
		}
		100% {
			top: 33px;
			margin-left: -3px;
		}
	}

	.loading-icon.icon3 {
		right: -3px;
		top: 33px;
		transition: all 1s linear;
		animation: loading3 1s infinite;
	}

	@keyframes loading3 {
		0% {
			top: 33px;
			right: -3px;
		}
		50% {
			top: 30px;
			right: 3px;
		}
		100% {
			top: 33px;
			right: -3px;
		}
	}
	@keyframes pageLoading {
		0% {
			transform: rotate(0);
		}
		33.3% {
			transform: rotate(120deg);
		}
		66.6% {
			transform: rotate(240deg);
		}
		100% {
			transform: rotate(360deg);
		}
	}

script.
	let timer
	const loadingNum = document.querySelector("#progress-num")
	document.onreadystatechange = () => {
		if (document.readyState === "complete") {
			clearInterval(timer)
			loadingNum.innerHTML = 100
			setTimeout(() => {
				document.querySelector("#blog-app-loading").setAttribute("class", "fade")
				document.querySelector("#blog-app-loading").style.zIndex = -10
			}, 100)
		} else {
			timer = setInterval(() => {
				loadingNum.innerHTML = Number(loadingNum.innerHTML) + 2
				if (Number(loadingNum.innerHTML) > 90) {
					loadingNum.innerHTML = Number(Number(loadingNum.innerHTML) + 0.2).toFixed()
				}
				if (Number(loadingNum.innerHTML) > 98) {
					clearInterval(timer)
				}
			}, 10)
		}
	}
	window.onerror = () => {
		clearInterval(timer)
		document.querySelector(".loading-progress").innerHTML = "页面加载失败..."
	}
	window.onload = () => {
		document.querySelector("#blog-app-loading").setAttribute("class", "fade")
		document.querySelector("#blog-app-loading").style.zIndex = -10
	}
